struct PS_INPUT
{
	float4 hpos : TEXCOORD;
};

struct PS_OUTPUT
{
	float4 colour : COLOR0;
};

PS_OUTPUT main( PS_INPUT fragment )
{
	PS_OUTPUT output;

	float depth = fragment.hpos.z / fragment.hpos.w;
	float dx = ddx(depth);  
	float dy = ddy(depth); 

	output.colour = float4( depth, depth*depth + 0.25*(dx*dx + dy*dy), 0, 1 );

	return output;
}